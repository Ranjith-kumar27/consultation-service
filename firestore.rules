rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isAdmin() {
      return isAuthenticated() && getUserData().role == 'admin';
    }

    // User profiles
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    // Doctor information
    match /doctors_info/{doctorId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(doctorId) || isAdmin();
    }
    
    // Appointments
    match /appointments/{appointmentId} {
      allow read: if isAuthenticated() && (
        isOwner(resource.data.patientId) || 
        isOwner(resource.data.doctorId) || 
        isAdmin()
      );
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        isOwner(resource.data.patientId) || 
        isOwner(resource.data.doctorId) || 
        isAdmin()
      );
      allow delete: if isAdmin();
    }

    // Chat
    match /chats/{chatId} {
      // Use split and in for robust checking of UIDs in the room ID
      allow read, write: if isAuthenticated() && (
        request.auth.uid in chatId.split('_') || 
        (resource != null && request.auth.uid in resource.data.participants)
      );
      
      match /messages/{messageId} {
        allow read, write: if isAuthenticated() && (
          request.auth.uid in chatId.split('_') ||
          (get(/databases/$(database)/documents/chats/$(chatId)).data.participants != null && 
           request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants)
        );
      }
    }
  }
}

